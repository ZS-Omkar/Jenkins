pipeline {
    agent {
        label "ANSIBLE"
    }

    parameters {
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Select Environment')

    }
    stages {
        stage('find the server') {
            steps {
                sh 'echo'
            }
        }
        stage('Deploy to Dev') {
            when {
                environment name: 'ENV', value: 'dev'
            }
            steps {
                sh 'echo ansible'
            }
        }
        stage('Deploy to prod') {
            when {
                environment name: 'ENV', value: 'dev'
            }
            steps {
                sh 'echo ansible'
            }
        }
    }
}